{
  "appId": "com.beastbrowser.app",
  "productName": "BeastBrowser",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/**/*",
    "useragents/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "public",
      "to": "public",
      "filter": ["**/*"]
    },
    {
      "from": "useragents",
      "to": "useragents", 
      "filter": ["**/*"]
    },
    {
      "from": "electron",
      "to": "electron",
      "filter": ["free.ico", "preload-payment.js"]
    }
  ],
  "forceCodeSigning": false,
  "afterSign": false,
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/free.ico",
    "sign": false,
    "certificateFile": null,
    "certificatePassword": null,
    "verifyUpdateCodeSignature": false,
    "requestedExecutionLevel": "asInvoker"
  },
  "mac": {
    "icon": "public/free.png",
    "category": "public.app-category.developer-tools"
  },
  "linux": {
    "icon": "public/free.png",
    "category": "Development"
  }
}